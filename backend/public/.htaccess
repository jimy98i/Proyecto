<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Redirigir www a sin www y forzar HTTPS (si el hosting lo permite)
    RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
    RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
    RewriteCond %{HTTPS} off
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Permitir acceso a archivos estáticos y de entrada
    <FilesMatch "\.(html|php|js|css|svg|png|jpg|jpeg|gif|ico|json|txt|woff|woff2|ttf|eot|map)$">
        Require all granted
    </FilesMatch>

    # Redirigir rutas de la API a Laravel (ajusta si tu API está en /api)
    RewriteCond %{REQUEST_URI} ^/api/
    RewriteRule ^api/(.*)$ index.php [L]

    # Servir los assets generados por Vite correctamente
    RewriteCond %{REQUEST_URI} ^/assets/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^assets/(.*)$ public/assets/$1 [L]

    # Redirigir todo lo que no sea un archivo real a index.html (SPA React)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.html [L]

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

</IfModule>

